<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:text="Create your BlitzJobs Profile"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:id="@+id/lbl_1"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@id/lbl_1"
        android:id="@+id/lbl_2"
        android:text="Search and apply to join from India's No.1 job site"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="Create account faster using"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lbl_2"
        android:layout_marginTop="20dp"
        android:id="@+id/lbl_3"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_below="@id/lbl_3"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:text="Google"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cornerRadius="5dp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/giconxml"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:textColor="@color/black"
            app:cornerRadius="5dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/fbiconxml"
            android:layout_marginRight="10dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="All your activity  will remail private"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_1"
        android:layout_marginTop="20dp"
        android:id="@+id/lbl_4"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/lbl_4"
        android:weightSum="100"
        android:id="@+id/ll_2"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:background="#bbbbbb"
            android:layout_weight="50"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="OR"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="#cccccc"
            android:layout_height="1dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/ll_2"
        android:layout_height="match_parent">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            app:boxBackgroundColor="@color/white"
            android:layout_height="wrap_content"
            android:hint="Full Name">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/th_purple"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_add"
            android:layout_width="match_parent"
            app:boxBackgroundColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:hint="Email Address">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/th_purple"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_txt"
            android:layout_width="match_parent"
            app:boxBackgroundColor="@color/white"
            app:endIconMode="password_toggle"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:hint="Create Password">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColorHint="@color/th_purple"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:padding="10dp"
        android:text="REGISTER"
        android:layout_marginBottom="10dp"
        android:id="@+id/register_reg"
        android:backgroundTint="@color/th_purple"
        app:cornerRadius="20dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:padding="10dp"
        android:text="Terms and Conditions and Private Policy"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_above="@id/register_reg"
        app:cornerRadius="20dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>
