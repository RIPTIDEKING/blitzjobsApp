<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lbl_1"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Let's start building your Profile!"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_linear"
        android:elevation="8dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="500">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_stu"
            android:layout_gravity="center"
            android:layout_weight="400"
            android:text="I am a student / Have never worked"
            android:textColor="@color/th_purple" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="100"
            android:src="@drawable/school" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_linear"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:weightSum="500">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/btn_work"
            android:layout_weight="400"
            android:text="I am working / Have worked before"
            android:textColor="@color/th_purple" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="100"
            android:src="@drawable/work" />
    </LinearLayout>
</LinearLayout>